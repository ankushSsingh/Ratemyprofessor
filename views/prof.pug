  if (has_rated)
    h3 You have already rated
      //- h2 <a href="/professor/"+profid + "/rate/"> Update Rating </a> 
      h4 param1 = #{user_ratings.param1}
      h4 param2 = #{user_ratings.param2}
      h4 param3 = #{user_ratings.param3}
      h4 param4 = #{user_ratings.param4}
  else
      - var href = "/professor/" + profid+"/rate/";
