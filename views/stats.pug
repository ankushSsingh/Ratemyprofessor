      .bestcontainer
        h3(style="font-weight: bold; color: #5858a6;") Generous Grader
        h4 #{prof2.profile.name}
        h4 Department: #{prof2.profile.department}
        .ratetext 
          p #{prof2.rating.param2.toFixed(1)}
