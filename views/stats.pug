extends layout

block content
  h1 Statistics
  hr 
  style.
    .bestcontainer {
      width: 100%;
      background-color: #f6f6f6;
      border-radius: 15px;
      padding: 30px;
      margin: 15px;
    }
    .ratetext {
      font-size: 20px;
      position: absolute;
      top: 25%;
      width: 80px;
      height: 80px;
      background-color: #4f37ca82;
      right: 20px;
      text-align: center;
      padding :20px;
      border-radius: 20px;
    }
  
  .row
    .col-md-6
      .bestcontainer
        h3(style="font-weight: bold; color: #5858a6;") Best Teacher
        h4 #{prof1.profile.name}
        h4 Department: #{prof1.profile.department}
        .ratetext 
          p #{prof1.rating.param1.toFixed(1)}
